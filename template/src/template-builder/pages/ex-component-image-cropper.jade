block pageVars
	- var pageTitle = "Image Cropper"
	- var pageSubTitle = "jQuery image cropping plugin"
	- var description = "A simple jQuery image cropping plugin."
	- var activeMenu = "ex-component-image-cropper"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"}, {name:"Image Cropper"}])

//- Include page content in page block
append content
	include ../contents/ex-component-image-cropper.html

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src='../../../app-assets/vendors/js/extensions/cropper.min.js', type='text/javascript')

//- Page CSS
//------------------------------
//- Add page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/plugins/images/cropper/cropper.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src='../../../app-assets/js/scripts/extensions/image-cropper.js', type='text/javascript')